{
  "name": "constellate",
  "version": "1.0.0",
  "description": "Federated event management platform implementing ActivityPub protocol",
  "type": "module",
  "scripts": {
    "dev:app": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\" --kill-others-on-fail false",
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "npm run dev --prefix client",
    "build": "tsc && cd client && npm run build",
    "start": "node dist/server.js",
    "docker:dev": "docker compose up app1 app2 caddy --build",
    "docker:dev:down": "docker compose stop app1 app2 caddy",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:test": "docker compose up test --build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest --coverage --watch --reporter=dot",
    "test:coverage": "vitest run --coverage --reporter=basic",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "analyze:unused": "knip",
    "analyze:orphans": "madge src --extensions ts --orphans"
  },
  "keywords": [
    "activitypub",
    "federation",
    "calendar",
    "events",
    "decentralized"
  ],
  "author": "Bernhard Hayden <constellate@bhayden.at>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@touch4it/ical-timezones": "^1.7.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^1.1.5",
    "@prisma/client": "^6.19.0",
    "@scalar/hono-api-reference": "^0.9.25",
    "better-auth": "^1.4.2",
    "hono": "^4.6.14",
    "ical-generator": "^8.1.1",
    "isomorphic-dompurify": "^2.33.0",
    "nodemailer": "^7.0.11",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@pkgverse/prismock": "^2.0.0",
    "@types/node": "^22.19.1",
    "@types/nodemailer": "^7.0.4",
    "@vitest/coverage-v8": "^2.1.9",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.16.0",
    "eslint-config-love": "^134.0.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.5.0",
    "knip": "^5.70.2",
    "madge": "^8.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^2.1.9"
  }
}
