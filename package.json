{
	"name": "constellate",
	"version": "1.0.0",
	"description": "Federated event management platform implementing ActivityPub protocol",
	"type": "module",
	"scripts": {
		"dev:app": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\" --kill-others-on-fail false",
		"dev:server": "tsx watch src/server.ts",
		"dev:client": "npm run dev --prefix client",
		"build": "tsc && cd client && npm run build",
		"start": "node dist/server.js",
		"docker:dev": "docker compose up app1 app2 caddy --build",
		"docker:dev:down": "docker compose stop app1 app2 caddy",
		"docker:prod": "docker compose -f docker-compose.prod.yml up --build",
		"docker:prod:down": "docker compose -f docker-compose.prod.yml down",
		"docker:test": "docker compose up test --build",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:seed": "tsx prisma/seed.ts",
		"db:studio": "prisma studio",
		"test": "vitest run",
		"test:watch": "vitest --coverage --watch --reporter=dot",
		"test:coverage": "vitest run --coverage --reporter=basic",
		"lint": "eslint src --ext .ts",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\" --ignore-path .prettierignore && prisma format",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\" --ignore-path .prettierignore",
		"analyze:unused": "knip",
		"analyze:orphans": "madge src --extensions ts --orphans"
	},
	"keywords": [
		"activitypub",
		"federation",
		"calendar",
		"events",
		"decentralized"
	],
	"author": "Bernhard Hayden <constellate@bhayden.at>",
	"license": "AGPL-3.0",
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"@hono/zod-openapi": "^1.1.5",
		"@prisma/adapter-pg": "^7.1.0",
		"@prisma/client": "^7.1.0",
		"@scalar/hono-api-reference": "^0.9.28",
		"@touch4it/ical-timezones": "^1.9.0",
		"better-auth": "^1.4.6",
		"hono": "^4.10.8",
		"ical-generator": "^10.0.0",
		"isomorphic-dompurify": "^2.34.0",
		"nodemailer": "^7.0.11",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@prisma/internals": "^7.1.0",
		"@types/node": "^25.0.1",
		"@types/nodemailer": "^7.0.4",
		"@vitest/coverage-v8": "^4.0.15",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"eslint": "^9.16.0",
		"eslint-config-love": "^137.0.0",
		"eslint-plugin-sonarjs": "^3.0.5",
		"globals": "^16.5.0",
		"knip": "^5.73.3",
		"madge": "^8.0.0",
		"prettier": "^3.7.4",
		"prisma": "^7.1.0",
		"prisma-mock": "^1.0.2",
		"tsx": "^4.21.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.49.0",
		"vitest": "^4.0.15",
		"vitest-mock-extended": "^3.1.0"
	}
}
