{
  "name": "stellar-calendar",
  "version": "1.0.0",
  "description": "Federated event management platform implementing ActivityPub protocol",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "npm run dev --prefix client",
    "build": "tsc && cd client && npm run build",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "dev:federation": "docker-compose -f docker-compose.yml up",
    "dev:federation:down": "docker-compose -f docker-compose.yml down",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "activitypub",
    "federation",
    "calendar",
    "events",
    "decentralized"
  ],
  "author": "Bernhard Hayden <stellar@bhayden.at>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^6.1.0",
    "better-auth": "^1.4.0",
    "hono": "^4.6.14",
    "ical-generator": "^8.0.2",
    "pino": "^9.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.16.0",
    "msw": "^2.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}