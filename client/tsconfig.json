{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Path aliases - enforce barrel file imports */
        "baseUrl": ".",
        "paths": {
            "@/components/ui": ["./src/components/ui/index.ts"],
            "@/components/layout": ["./src/components/layout/index.ts"],
            "@/components/icons": ["./src/components/icons/index.ts"],
            "@/design-system": ["./src/design-system/index.ts"],
            "@/types": ["./src/types/index.ts"],
            "@/hooks/queries": ["./src/hooks/queries/index.ts"],
            "@/stores": ["./src/stores/index.ts"],
            "@/lib/*": ["./src/lib/*"],
            "@/components/*": ["./src/components/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/pages/*": ["./src/pages/*"]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/tests/**"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}